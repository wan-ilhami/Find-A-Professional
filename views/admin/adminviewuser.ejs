            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Navbar -->
                    
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <button class="w3-button w3-hover-light-grey"><a href="/logout">Log out</a></button>
                    </ul>
                </nav>
                <!-- End of Topbar -->


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">View All User</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"
                                    style="text-align:center ;">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Picture</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                            
                                        </tr>
                                    <tbody>
                                        <% for(var i = 0; i < data.length; i++) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><img src="<%= data[i].image %>" style="height: 100px;width: auto;" ></td>
                                            <td><%= data[i].username %></td>
                                            <td><%= data[i].email %></td>
                                            
                                        </tr>
                                    </tbody>
                                    <% } %>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    

                    <div class="modal fade" id="editProfile" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header border-bottom-0">
                                    <h5 class="modal-title" id="exampleModalLabel">Book this
                                        user</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="card-body">
                                    <form>
                                        <div class="jarakInput ">
                                            <label for="name"><a>Name : </a></label>
                                            <input type="text" name="Ename" id="Ename" value=""
                                                class="form-control form-control-user">
                                        </div>

                                        <hr class="sidebar-divider">

                                        <div class="jarakInput">
                                            <label for="uname"><a>Email :</a></label>
                                            <input type="Eemail" name="Eemail" id="Eemail" value=" "
                                                class="form-control form-control-user">
                                        </div>


                                        <hr class="sidebar-divider">

                                        <div class="jarakInput ">
                                            <label for="occupation"><a>Occupation :
                                                </a></label>
                                            <input type="text" name="Eocu" value=""
                                                class="form-control form-control-user">
                                        </div>
                                        <hr class="sidebar-divider">

                                        <hr>

                                        <a href="/profile" class="btn btn-primary btn-user btn-block">Update
                                            Profile</a>
                                    </form>


                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->



