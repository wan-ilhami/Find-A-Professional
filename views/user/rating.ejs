<!DOCTYPE html>
<html lang="en">

<%- include("../header.ejs") %>
<head>
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/userdashboard">

                <div class="sidebar-brand-text mx-3">Find A Professional</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="/userdashboard">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link" href="/profile">
                    <i class="fa fa-user"></i>
                    <span>User Profile</span></a>
            </li>
            <hr class="sidebar-divider">
            <!-- Nav Item - Tables -->
            <li class="nav-item active">
                <a class="nav-link" href="/bookinprogress">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Booking In Progress</span></a>
            </li>


            <hr class="sidebar-divider">
            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="/historybook">
                    <i class="fas fa-fw fa-table"></i>
                    <span>History Book Professional</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>



        </ul>
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Navbar -->
                    
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <button class="w3-button w3-hover-light-grey"><a href="/logout">Log out</a></button>
                    </ul>
                </nav>



                <div class="container py-5">
                    
                    <div class="row">


                        <div class="card shadow mb-4" style="width: 40%; margin:auto; display:block;">
    
                            <div class="card-header py-3" style="text-align:center;">
                                <h3>Rate the Professional</h3>
                            </div>
                            <div class="card-body">
                                <form action="/rate" method="post">
                                    <input type="hidden" name="id" value="<%=bookings.id%>">

                                    <div class="jarakInput ">
                                        <label for="name">Professional Name : </label>
                                        <input type="text" name="name" value="<%=bookings.proid.username%>"
                                            class="form-control form-control-user" readonly>
                                    </div>
    
                                    <hr class="sidebar-divider">

                                    <div class="jarakInput ">
                                        <label for="name">Professional Category : </label>
                                        <input type="text" name="name" value="<%=bookings.proid.categoryname%> "
                                            class="form-control form-control-user"readonly>
                                    </div>
    
                                    <hr class="sidebar-divider">

                                    <div class="jarakInput ">
                                        <label for="name">Booking Time : </label>
                                        <input type="text" name="name" value="<%=bookings.time%>"
                                            class="form-control form-control-user"readonly>
                                    </div>
    
                                    <hr class="sidebar-divider">
                                    
                                    <div class="jarakInput  form-group">
                                        <label for="name">Rating : </label>
                                        <select name="rate" id="rate" style="text-align: center;" class="form-control" required >
                                            <option value="5">★★★★★</option>
                                            <option value="4">★★★★</option>
                                            <option value="3">★★★</option>
                                            <option value="2">★★</option>
                                            <option value="1">★</option>
                                          </select>
                                    </div>
                                    <hr class="sidebar-divider">

                                    <div class="jarakInput ">
                                        <label for="ratedesc">Rating Description : </label>
                                        <textarea type="text" name="ratedesc" value=""
                                            class="form-control form-control-user" required></textarea>
                                    </div>
                                
    
                                    <hr class="sidebar-divider">
    
                                    <input type="submit" class="btn btn-primary btn-user btn-block"></input>
                                    
                                </form>
    
                            </div>
                        </div>
                    </div>



                    
                   





                </div>
            </div>

            <!-- End your project here-->



        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/datatables-demo.js"></script>

    <script type="text/javascript" src="js/mdb.min.js"></script>
    <!-- Custom scripts -->
    <script type="text/javascript"></script>

</body>

</html>